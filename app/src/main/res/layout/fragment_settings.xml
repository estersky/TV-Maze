<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:windowBackground">


    <!-- Card-style container untuk tema -->

    <TextView
        android:id="@+id/tvThemeTitle"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="14dp"
        android:text="Pilih Tema Aplikasi"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="@android:color/white"
        android:backgroundTint="?android:attr/colorBackgroundFloating"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="4dp"
        android:clipToPadding="false">

        <RadioGroup
            android:id="@+id/rgTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default (Putih ke Abuan)"
                android:layout_marginBottom="6dp" />

            <RadioButton
                android:id="@+id/rbNavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navy"
                android:layout_marginBottom="6dp" />

            <RadioButton
                android:id="@+id/rbDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hitam" />

            <RadioButton
                android:id="@+id/rbPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pink" />

            <RadioButton
                android:id="@+id/rbUngu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ungu" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
